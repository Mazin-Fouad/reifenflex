# Erstelle .gitignore Datei
cat > .gitignore << 'EOF'
# Dependencies
node_modules/
package-lock.json
yarn.lock

# Build files
/dist
/build
.cache/

# Environment files
.env
.env.local
.env.development.local
.env.test.local
.env.production.local

# IDE/Editor files
.vscode/
.idea/
*.sublime-*
.DS_Store
*.swp
*.swo

# Log files
npm-debug.log*
yarn-debug.log*
yarn-error.log*
logs/
*.log

# Temp files
tmp/
temp/
EOF